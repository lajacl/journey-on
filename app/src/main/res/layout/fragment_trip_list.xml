<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FragmentRoot"
    android:orientation="vertical"
    tools:context=".fragment.TripListFragment">

    <TextView
        style="@style/Header"
        android:text="@string/header_trips" />

    <android.support.v7.widget.CardView style="@style/CardItem">

        <TextView
            android:id="@+id/trip_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="@string/trip_no_show"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

</LinearLayout>